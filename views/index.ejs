<%- include('partials/_header') -%>
<body>

  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Clean Blog</h1>
            <span class="subheading">A Blog Theme by Start Bootstrap</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">

        <% for ( let i=0 ;i <posts.length; i++){ %>

        
        <div class="post-preview">
          <a href="/posts/<%=posts[i]._id %>">
            <h1 class="post-title">
              <%=posts[i].title %>
            </h1>
            <h3 class="post-description">
              <%=posts[i].description %>
            </h3>
          </a>
          <p class="post-meta">
            <%=posts[i].dateCreated %>
          </p>
        </div>
        <% } %>
        <!-- Pager -->
        <div class="clearfix">
         <% if (pages>0) { %>

          <% for (i=1; i<=pages; i++) { %>
            <%   if (i == current) { %>
          <a class="btn btn-primary float-right active" href="/?page=<%= i %>"><%= i %></a>
          <% } else if (i < pages) { %>
            <a class="btn btn-primary float-right" href="/?page=<%= i %>"><%= i %></a>
            <%  } else { %>
              <a class="btn btn-primary float-right" href="/?page=<%= i %>"><%= i %></a>
              <%  } %>
          <% } %>
         <% } %>
        </div>
      </div>
    </div>
  </div>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') -%>
  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
